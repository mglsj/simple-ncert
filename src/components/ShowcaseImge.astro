---
import ImageCard, {
	type ImageCardProps,
} from "@/components/partials/ImageCard.astro";

export type eImageProps = Props;

interface Props {
	entries: ImageCardProps[];
}

const { entries } = Astro.props;
---

<div>
	{entries.map((entry) => <ImageCard {...entry} />)}
</div>

<style>
	div {
		display: grid;
		gap: 1rem;
		grid-template-columns: repeat(auto-fit, minmax(min(100%, 11rem), 1fr));
	}

	div > :global(*) {
		margin-top: 0 !important;
	}
</style>
