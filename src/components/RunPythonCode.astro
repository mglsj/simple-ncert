---
import { LinkButton } from "@astrojs/starlight/components";

interface Props {
	code: string;
}

const { code } = Astro.props;
---

<LinkButton
	href={`https://jupyterlite.github.io/demo/repl/index.html?toolbar=1&kernel=python&code=${encodeURIComponent(code)}`}
	target="_blank"
	variant="secondary"
	icon="external"
	iconPlacement="start"
>
	Run Python Code
</LinkButton>
