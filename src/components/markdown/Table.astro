---
import { Card } from "@/components/markdown";
import TableHeading from "../partials/TableHeading.astro";
import { generateRandomId } from "@/lib/helpers";

interface Props {
	id?: string;
	title?: string;
	center?: boolean;
}

const { id = generateRandomId(), title, center = true } = Astro.props;
---

<Card id={`table-${id}`}>
	{title && <TableHeading title={title} />}
	{
		center ? (
			<center>
				<slot />
			</center>
		) : (
			<slot />
		)
	}
</Card>

<style is:global>
	th,
	td {
		code,
		.katex {
			white-space: nowrap;
		}
	}
</style>
