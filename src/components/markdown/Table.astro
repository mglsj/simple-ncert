---
import { Card } from "@/components/markdown";
import TableHeading from "../partials/TableHeading.astro";

interface Props {
	id?: string;
	title?: string;
	center?: boolean;
}

import crypto from "node:crypto";
const {
	id = crypto.randomUUID({ disableEntropyCache: true }),
	title,
	center = true,
} = Astro.props;
---

<Card id={`table-${id}`}>
	{title && <TableHeading title={title} />}
	{
		center ? (
			<center>
				<slot />
			</center>
		) : (
			<slot />
		)
	}
</Card>

<style is:global>
	th,
	td {
		code,
		.katex {
			white-space: nowrap;
		}
	}
</style>
