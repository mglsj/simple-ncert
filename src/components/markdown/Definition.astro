---
import { Card } from "@/components/markdown";

interface Props {
	id?: string;
	title?: string;
}

import crypto from "node:crypto";
const { id = crypto.randomUUID({ disableEntropyCache: true }), title } =
	Astro.props;
---

<Card id={`definition-${id}`} title={title} heading={5}>
	<slot />
</Card>
