---
interface Props {
	author: string;
	href?: string;
}

const { author, href } = Astro.props;
---

<div class="not-content sl-flex">
	<div class="starlight-showcases-quote-card">
		<blockquote cite={href}>
			<em>
				<slot />
			</em>
		</blockquote>
		<div class="starlight-showcases-quote-infos">
			{
				href ? (
					<a {href} target="_blank">
						{author}
					</a>
				) : (
					author
				)
			}
		</div>
	</div>
</div>

<style>
	.starlight-showcases-quote-card {
		border: 1px solid var(--sl-color-gray-5);
		border-radius: 0.5rem;
		box-shadow: var(--sl-shadow-sm);
		width: 100%;
	}

	blockquote {
		color: var(--sl-color-white);
		padding: 1rem;
	}

	.starlight-showcases-quote-infos {
		border-top: 1px solid var(--sl-color-gray-5);
		color: var(--sl-color-gray-3);
		font-weight: 600;
		line-height: 1.5;
		padding: 1rem;
	}

	.starlight-showcases-quote-infos a {
		color: var(--sl-color-gray-3);
	}
</style>
