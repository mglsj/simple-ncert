---
import Box from "@/components/partials/Box.astro";
import { generateRandomId } from "@/lib/helpers";

interface Props {
	title: string;
	id?: string;
}

const { title, id = generateRandomId() } = Astro.props;
---

<Box title={title} variant="success" icon="sun" id={`think-${id}`}>
	<slot />
</Box>
