---
import Image from "astro/components/Image.astro";
import ImageZoom from "./ImageZoom.astro";

type ImageEntry = {
	image: ImageMetadata;
	imageDark: ImageMetadata | null;
	alt: string;
};

export type { ImageEntry };

interface Props {
	entry: ImageEntry;
}

const { entry } = Astro.props;
---

<ImageZoom class={entry.imageDark !== null ? "figure-light" : ""}>
	<Image src={entry.image} alt={entry.alt} data-zoomable />
</ImageZoom>

{
	entry.imageDark && (
		<ImageZoom class="figure-dark">
			<Image src={entry.imageDark} alt={entry.alt} data-zoomable />
		</ImageZoom>
	)
}
