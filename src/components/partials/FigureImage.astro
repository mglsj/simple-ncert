---
import Image from "astro/components/Image.astro";
import ImageZoom from "./ImageZoom.astro";

type ImageEntry = {
	image: ImageMetadata;
	imageDark: ImageMetadata | null;
	alt: string;
};

export type { ImageEntry };

interface Props {
	entry: ImageEntry;
}

const { entry } = Astro.props;
---

<ImageZoom>
	<Image
		src={entry.image}
		alt={entry.alt}
		class={entry.imageDark !== null ? "figure-light" : ""}
		data-zoomable
	/>
</ImageZoom>
{
	entry.imageDark && (
		<ImageZoom>
			<Image
				src={entry.imageDark}
				alt={entry.alt}
				class="figure-dark"
				data-zoomable
			/>
		</ImageZoom>
	)
}
